<header class="site-header container">
    <div class="header-left">
        <a class="logo" href="{{@site.url}}">
            {{#if @site.icon}}
                <div class="cover-icon">
                    <img class="cover-icon-image" src="{{@site.icon}}" alt="{{@site.title}}">
                </div>
            {{/if}}
        </a>
    </div>
    <div class="logo-container">
